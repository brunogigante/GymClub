<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/createplanland"
        android:layout_width="600dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/ic_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.425" />

    <TextView
        android:id="@+id/createPlanAlert"
        android:layout_width="190dp"
        android:layout_height="20dp"
        android:layout_marginHorizontal="30dp"
        android:text="You don't have a plan yet"
        app:layout_constraintBottom_toBottomOf="@+id/createplanland"
        app:layout_constraintEnd_toEndOf="@+id/createplanland"
        app:layout_constraintStart_toStartOf="@+id/createplanland"
        app:layout_constraintTop_toTopOf="@+id/createplanland"
        app:layout_constraintVertical_bias="0.233" />

    <TextView
        android:id="@+id/createPlanLink"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="@string/click_here"
        android:textColor="#1CB3F4"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/createplanland"
        app:layout_constraintEnd_toEndOf="@+id/createplanland"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/createplanland"
        app:layout_constraintTop_toTopOf="@+id/createplanland"
        app:layout_constraintVertical_bias="0.9" />


</androidx.constraintlayout.widget.ConstraintLayout>