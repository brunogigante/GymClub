<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageViewPFP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pfp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.119" />


    <TextView
        android:id="@+id/textViewProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toEndOf="@+id/imageViewPFP"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112" />

    <ImageButton
        android:id="@+id/definitions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_definitions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintStart_toEndOf="@+id/imageViewPFP"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115" />


    <TextView
        android:id="@+id/myPlans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="My Plans"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/createplan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />

    <ImageView
        android:id="@+id/createplan"
        android:layout_width="600dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/ic_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.425" />

    <TextView
        android:id="@+id/createPlanAlert"
        android:layout_width="190dp"
        android:layout_height="20dp"
        android:layout_marginHorizontal="30dp"
        android:text="You don't have a plan yet"
        app:layout_constraintBottom_toBottomOf="@+id/createplan"
        app:layout_constraintEnd_toEndOf="@+id/createplan"
        app:layout_constraintStart_toStartOf="@+id/createplan"
        app:layout_constraintTop_toTopOf="@+id/createplan"
        app:layout_constraintVertical_bias="0.233" />

    <TextView
        android:id="@+id/createPlanLink"
        android:layout_width="70dp"
        android:layout_height="20dp"

        android:text="Click here"
        android:textColor="#1CB3F4"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/createplan"
        app:layout_constraintEnd_toEndOf="@+id/createplan"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/createplan"
        app:layout_constraintTop_toTopOf="@+id/createplan"
        app:layout_constraintVertical_bias="0.9" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/profile_bottom_nav" />

    <ImageView
        android:id="@+id/displayExercise"
        android:layout_width="600dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_button"
        app:layout_constraintBottom_toTopOf="@+id/nav_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.937" />

    <TextView
        android:id="@+id/exerciseTextView"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:text="Bench Press"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/displayExercise"
        app:layout_constraintEnd_toEndOf="@+id/displayExercise"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="@+id/displayExercise"
        app:layout_constraintTop_toTopOf="@+id/displayExercise"
        app:layout_constraintVertical_bias="0.433" />


</androidx.constraintlayout.widget.ConstraintLayout>