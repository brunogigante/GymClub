<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_plan_image">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="42dp"
        android:layout_height="19dp"
        android:layout_marginStart="12dp"
        android:text="Chest"
        android:textColor="@color/colorPrimary"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/planName"
        android:layout_width="84dp"
        android:layout_height="21dp"
        android:text="Bench press"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="160dp"
        android:layout_height="46dp"
        android:text="Laydown on the flat bench, hands open shoulder wide and press the bar"
        android:textColor="@color/black"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="@+id/planName"
        app:layout_constraintTop_toBottomOf="@+id/planName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="44dp"
        android:layout_height="17dp"
        android:text="2 weeks"
        android:textColor="@color/black"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundImageView"
        app:srcCompat="@mipmap/ic_workout_round" />


</androidx.constraintlayout.widget.ConstraintLayout>