<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/createplan"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.307" />


        <TextView
            android:id="@+id/createPlanAlert"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:text="You don't have a plan yet"
            app:layout_constraintBottom_toBottomOf="@+id/createplan"
            app:layout_constraintEnd_toEndOf="@+id/createplan"
            app:layout_constraintStart_toStartOf="@+id/createplan"
            app:layout_constraintTop_toTopOf="@+id/createplan"
            app:layout_constraintVertical_bias="0.333" />

        <TextView
            android:id="@+id/createPlanLink"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:text="@string/click_here"
            android:textColor="#1CB3F4"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/createplan"
            app:layout_constraintEnd_toEndOf="@+id/createPlanAlert"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@+id/createPlanAlert"
            app:layout_constraintTop_toBottomOf="@+id/createPlanAlert"
            app:layout_constraintVertical_bias="0.59" />


</androidx.constraintlayout.widget.ConstraintLayout>