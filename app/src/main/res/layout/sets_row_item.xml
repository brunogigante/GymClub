<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_plan_image"
    android:layout_marginBottom="10dp">


    <TextView
        android:id="@+id/setsNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:hint="Set"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewRepetitions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repetitions: "
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/setsNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/setsNameTextView" />

    <TextView
        android:id="@+id/textViewWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight: "
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewRepetitions"
        app:layout_constraintTop_toBottomOf="@+id/textViewRepetitions" />

    <TextView
        android:id="@+id/weightValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="weight value"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/textViewWeight"
        app:layout_constraintTop_toBottomOf="@+id/repetitionsValue" />

    <TextView
        android:id="@+id/repetitionsValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="repetitions value"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/textViewRepetitions"
        app:layout_constraintTop_toBottomOf="@+id/setsNameTextView" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:adjustViewBounds="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_workout" />


</androidx.constraintlayout.widget.ConstraintLayout>