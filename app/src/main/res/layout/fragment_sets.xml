<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/add_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="@string/add_set"
        android:textStyle="bold"
        android:textColor="#212121"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/exercises"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="50dp"
        android:text="@string/exercises"
        android:textColor="#212121"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_set" />


    <EditText
        android:id="@+id/weight"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shapes"
        android:gravity="center_vertical"
        android:textColor="#9E9E9E"
        android:hint="@string/weight"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/spinner"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        android:importantForAutofill="no"
         />

    <EditText
        android:id="@+id/reps"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shapes"
        android:gravity="center_vertical"
        android:textColor="#9E9E9E"
        android:hint="@string/reps"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/weight"
        app:layout_constraintTop_toBottomOf="@+id/weight"
        android:importantForAutofill="no"/>


    <Button
        android:id="@+id/addExerciseButton"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/shapes"
        android:text="@string/add_set"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/reps"
        app:layout_constraintTop_toBottomOf="@+id/reps" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_button"
        app:layout_constraintStart_toStartOf="@+id/exercises"
        app:layout_constraintTop_toBottomOf="@+id/exercises" />


</androidx.constraintlayout.widget.ConstraintLayout>